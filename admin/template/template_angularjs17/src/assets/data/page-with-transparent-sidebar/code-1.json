import { Component, OnDestroy } from '@angular/core';import { AppSettings } from '../../../service/app-settings.service';@Component({  selector: 'page-with-transparent-sidebar',  templateUrl: './page-with-transparent-sidebar.html'})export class PageSidebarTransparent implements OnDestroy {  constructor(public appSettings: AppSettings) {    this.appSettings.appSidebarTransparent = true;  }  ngOnDestroy() {    this.appSettings.appSidebarTransparent = false;  }}